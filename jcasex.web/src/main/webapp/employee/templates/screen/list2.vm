#set($layout = "home/layout/default.vm")

<div class="container" style="margin-top:65px;">
	<div class="row">
		<div class="col-md-2">
			$control.setTemplate("employee:sidemenu.vm")
		</div>
		
		
		<div class="col-md-10">
			<h2 class="buttom_border">搜索会员<small>search account</small></h2>
			<form class="form-inline">
				<div class="form-group">
			    	<label for="search-account">登陆帐户</label>
			    	<input type="text" class="form-control input-sm" id="search-account" placeholder="account">
			  	</div>
			  	&nbsp;
			  	<div class="form-group">
			    	<label for="enabled">是否启用</label>
			    	<label class="radio-inline">
						<input type="radio" name="enbaled input-sm" value="true" checked="checked"> 启用
					</label>
					<label class="radio-inline">
				  		<input type="radio" name="enbaled input-sm" value="false"> 不启用
					</label>
					<label class="radio-inline">
				  		<input type="radio" name="enbaled input-sm" value=""> 全部
					</label>
			  	</div>
			  	&nbsp;
			  	<button type="submit" class="btn btn-default input-sm"> 查询 </button>
			</form>
			<br>
			<h2 class="buttom_border">帐户列表<small>list account</small></h2>
			  	
			  	<table id="table_demo_id" class="display">
			  		<thead>
			  		<tr>
			  			<td>ID</td>
			  			<td>登录帐号</td>
			  			<td>昵称</td>
			  			<td>备注</td>
			  		</tr>
			  		</thead>
			  		<tbody>	
			  		<tr>
			  			<td>1</td>
			  			<td>2</td>
			  			<td>3</td>
			  			<td>4</td>
			  		</tr>	
			  		<tr>
			  			<td>1</td>
			  			<td>2</td>
			  			<td>3</td>
			  			<td>4</td>
			  		</tr>	
			  		<tr>
			  			<td>1</td>
			  			<td>2</td>
			  			<td>3</td>
			  			<td>4</td>
			  		</tr>	
			  		</tbody>
				</table>
		</div>
	</div
</div>

<script type="text/javascript">

	$(document).ready( function () {
	    $('#table_demo_id').DataTable();
	} );

</script>




