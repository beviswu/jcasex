<div class="container" style="margin-top:65px;">
<h1 class="buttom_border">新增帐户<small>add account</small></h1>

<form class="form-horizontal">
	<div class="row">
		<div class="form-group">
		    <label for="account" class="col-xs-2 control-label">登陆帐号</label>
		    <div class="col-xs-5">
		    	<input type="text" class="form-control input-sm" id="account" placeholder="登陆帐号">
		    </div>
	  	</div>
	</div>
	<div class="row">
	  	<div class="form-group">
	    	<label for="nick" class="col-xs-2 control-label">昵称</label>
	    	<div class="col-xs-5">
	    		<input type="text" class="form-control input-sm" id="nick" placeholder="昵称">
	    	</div>
	  	</div>
  	</div>
  	<div class="row">
	  	<div class="form-group">
	    	<label for="password" class="col-xs-2 control-label">密码</label>
	    	<div class="col-xs-5">
	    		<input type="password" class="form-control input-sm" id="password" placeholder="密码">
	    	</div>
	  	</div>
  	</div>
  	
  	<div class="row">
	  	<div class="form-group">
	    	<label for="level" class="col-xs-2 control-label">会员等级</label>
	    	<div class="col-xs-5">
	    		<select class="form-control">
				  	<option selected="selected">1</option>
				  	<option>2</option>
				  	<option>3</option>
				  	<option>4</option>
				  	<option>5</option>
				</select>
	    	</div>
	  	</div>
  	</div>
  	
  	<div class="row">
	  	<div class="form-group">
	    	<label for="birthday" class="col-xs-2 control-label">出生日期</label>
	    	<div class="col-xs-5">
	    		<input type="datetime" class="form-control input-sm" id="birthday" placeholder="出生日期" readonly="readonly">
	    	</div>
	    	
	  	</div>
  	</div>
  	
  	<div class="row">
	  	<div class="form-group">
	    	<label for="enbaled" class="col-xs-2 control-label">是否启用</label>
	    	<div class="col-xs-5">
	    		<label class="radio-inline">
					<input type="radio" name="enbaled" value="true" checked="checked"> 启用
				</label>
				<label class="radio-inline">
				  	<input type="radio" name="enbaled" value="false"> 不启用
				</label>
	    	</div>
	  	</div>
  	</div>
  	<div class="row">
  		<div class="col-xs-2">&nbsp;</div>
  		<div class="col-xs-4">
  			<button type="submit" class="btn btn-default">提交</button>
  			<button type="reset" class="btn btn-default">重置</button>
  		</div>
  	<div>
</form>

</div>
<script type="text/javascript">
$(document).ready(function(){
	$('#birthday').datetimepicker({
	    format: 'yyyy-mm-dd hh:ii:ss',
	    autoclose: true,
	    todayBtn: true
	});
});
</script>
